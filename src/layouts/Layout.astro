---
interface Props {
  title?: string;
}

const { title = 'Posit Documentation' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    :root {
      --color-bg: #ffffff;
      --color-text: #333333;
      --color-accent: #0066cc;
      --color-border: #e0e0e0;
      --max-width: 800px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      line-height: 1.6;
      color: var(--color-text);
      background-color: var(--color-bg);
      padding: 2rem 1rem;
    }

    header {
      max-width: var(--max-width);
      margin: 0 auto 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid var(--color-border);
    }

    header h1 {
      color: var(--color-accent);
      font-size: 2rem;
    }

    main {
      max-width: var(--max-width);
      margin: 0 auto;
    }

    nav {
      margin: 2rem auto;
      max-width: var(--max-width);
    }

    nav ul {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    nav a {
      color: var(--color-accent);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border: 1px solid var(--color-border);
      border-radius: 4px;
      transition: background-color 0.2s;
    }

    nav a:hover {
      background-color: #f5f5f5;
    }

    /* Markdown content styling */
    .content h1, .content h2, .content h3, .content h4, .content h5, .content h6 {
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    .content h1 { font-size: 2rem; }
    .content h2 { font-size: 1.5rem; }
    .content h3 { font-size: 1.25rem; }

    .content p {
      margin-bottom: 1rem;
    }

    .content ul, .content ol {
      margin-bottom: 1rem;
      margin-left: 2rem;
    }

    .content li {
      margin-bottom: 0.5rem;
    }

    .content pre {
      background-color: #f5f5f5;
      padding: 1rem;
      border-radius: 4px;
      overflow-x: auto;
      margin-bottom: 1rem;
    }

    .content code {
      background-color: #f5f5f5;
      padding: 0.2rem 0.4rem;
      border-radius: 3px;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
    }

    .content pre code {
      background-color: transparent;
      padding: 0;
    }

    .content blockquote {
      border-left: 4px solid var(--color-accent);
      padding-left: 1rem;
      margin: 1rem 0;
      color: #666;
    }

    .content a {
      color: var(--color-accent);
      text-decoration: none;
    }

    .content a:hover {
      text-decoration: underline;
    }

    .content table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1rem;
    }

    .content th, .content td {
      border: 1px solid var(--color-border);
      padding: 0.5rem;
      text-align: left;
    }

    .content th {
      background-color: #f5f5f5;
    }

    footer {
      max-width: var(--max-width);
      margin: 3rem auto 0;
      padding-top: 1rem;
      border-top: 1px solid var(--color-border);
      text-align: center;
      color: #666;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <header>
    <h1><a href={base} style="color: inherit; text-decoration: none;">Posit</a></h1>
    <p>Documentation and Markdown Hosting</p>
  </header>

  <nav>
    <ul>
      <li><a href={base}>Home</a></li>
      <li><a href={`${base}docs/getting-started/`}>Getting Started</a></li>
      <li><a href={`${base}docs/features/`}>Features</a></li>
      <li><a href={`${base}about/`}>About</a></li>
    </ul>
  </nav>

  <main class="content">
    <slot />
  </main>

  <footer>
    <p>Built with <a href="https://astro.build" target="_blank">Astro</a></p>
  </footer>
</body>
</html>
